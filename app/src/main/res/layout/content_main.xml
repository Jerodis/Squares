<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.dds.jerodis.squares.MainActivity">


    <TextView android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time:"
        android:layout_alignTop="@+id/timerView"
        android:layout_toLeftOf="@+id/startGameButton"
        android:layout_toStartOf="@+id/startGameButton" />

    <TextView android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/startGameButton"
        android:layout_alignStart="@+id/startGameButton" />

    <TextView android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score:"
        android:layout_alignTop="@+id/timerView"
        android:layout_alignRight="@+id/startGameButton"
        android:layout_alignEnd="@+id/startGameButton" />

    <TextView android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/startGameButton"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_below="@+id/textView">

            <Button android:id="@+id/square0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_below="@+id/textView">

            <Button android:id="@+id/square4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_below="@+id/textView">

            <Button android:id="@+id/square8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square11"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_below="@+id/textView">

            <Button android:id="@+id/square12"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square13"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square14"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

            <Button android:id="@+id/square15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/blue"
                android:layout_margin="5dp"
                android:onClick="isTheSquare"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/startGameButton"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
